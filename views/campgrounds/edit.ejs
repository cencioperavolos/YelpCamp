<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1>Edit Campground "<%=campground.name%>"</h1>
    </div>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" id="" value="<%=campground.name%>">    
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" id="" value="<%=campground.price%>" min="0.0" step="0.01">    
        </div>
        <div class="form-group">
             <input class="form-control" type="text" name="campground[image]" id="" value="<%=campground.image%>">    
        </div>
        <div class="form-group">
             <textarea class="form-control" type="text" name="campground[description]" rows="5"><%=campground.description%>
             </textarea>    
        </div>
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary">Invia</button>

            <a class="btn btn-outline-primary" href="/campgrounds">Go Back</a>    
        </div>    
    </form>
</div>

<%- include("../partials/footer") %>