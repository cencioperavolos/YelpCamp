<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1>Create a new Campground</h1>
    </div>
    <form action="/campgrounds" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" id="" placeholder="name">    
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" id="" placeholder="price" min="0.0" step="0.01">    
        </div>
        <div class="form-group">
             <input class="form-control" type="text" name="campground[image]" id="" placeholder="image url">    
        </div>
        <div class="form-group">
             <textarea class="form-control" type="text" name="dampground[description]" id="" placeholder="description"></textarea>    
        </div>
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary">Invia</button>

            <a class="btn btn-outline-primary" href="/campgrounds">Go Back</a>    
        </div>    
    </form>
</div>

