<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-5">Edit Comment</h1>
        <p class="lead">for Campground: <%= campground.name %></p>
    </div>
    <form action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <textarea class="form-control" type="text" name="comment[text]" id=""><%=comment.text%></textarea>
        </div>
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary">Invia</button>

            <a class="btn btn-outline-primary" href="/campgrounds">Go Back</a>
        </div>
    </form>
</div>

<%- include("../partials/footer") %>